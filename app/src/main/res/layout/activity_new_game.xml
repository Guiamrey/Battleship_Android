<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teleco.psi.battleship.NewGameActivity"
    android:background="@drawable/water1">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="200dp" />

    <Button
        android:id="@+id/start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:text="@string/start_game" />

    <ImageView
        android:id="@+id/ship5"
        android:layout_height="25dp"
        android:src="@drawable/ship5"
        android:layout_width="105dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/ship3_1"
        android:layout_height="25dp"
        android:src="@drawable/ship3_1"
        android:layout_width="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="130dp" />

    <ImageView
        android:id="@+id/ship3_2"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:src="@drawable/ship4_1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ship3_1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_your_ships"
        android:textColor="@color/ColorWhite"
        android:textSize="23sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="11dp"
        android:layout_alignTop="@+id/ancla"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/ship2"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:src="@drawable/ship2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/start_game" />

    <ImageView
        android:id="@+id/ship4"
        android:layout_height="25dp"
        android:src="@drawable/ship3"
        android:layout_width="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@android:drawable/ic_menu_delete"
        android:id="@+id/trashicon"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="48dp"
        android:layout_width="44dp" />

    <ImageView
        android:id="@+id/ancla"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/anchor"
        android:layout_below="@+id/ship3_1"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pulsame"
        android:layout_below="@+id/ancla"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorWhite"
        android:textSize="15sp"
        android:id="@+id/num_fields"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
